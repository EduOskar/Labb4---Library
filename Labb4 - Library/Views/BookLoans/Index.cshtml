@{
    ViewData["Title"] = "MarkReturned";
}

<h1>List of book loans</h1>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to full list</a>
        </p>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Add new loan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Return book</th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.CustomerFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customers.CustomersLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loaned)
            </th>
