                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customers.CustomersLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Books.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Books.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loaned)
                </td>
