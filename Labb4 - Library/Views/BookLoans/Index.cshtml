                @Html.DisplayNameFor(model => model.IsLoaned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsReturned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*<form asp-action="MarkReturned" method="post">
